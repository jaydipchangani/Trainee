<Window x:Class="CopilotUsageTracker.UsageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Copilot Usage Tracker" Height="200" Width="300">
    <Grid>
        <TextBlock Name="UsageText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <Button Content="Refresh" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="RefreshUsage"/>
    </Grid>
</Window>
