@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center mt-5">
        <h1 class="display-4">Welcome to Our Web Application!</h1>
        <p class="lead">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

        <!-- Display Logged-In User's First Name -->
        @if (User.Identity.IsAuthenticated)
        {
            var firstName = User.Claims.FirstOrDefault(c => c.Type == "FirstName")?.Value;
            if (firstName != null)
            {
                <div class="alert alert-success mt-4">
                    <h4>Hello, @firstName!</h4>
                    <p>You are logged in.</p>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4">
                    <h4>Hello, User!</h4>
                    <p>Your first name is not set. Please update your profile.</p>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning mt-4">
                <h4>Hello, Guest!</h4>
                <p>Please <a href="/Account/Login">login</a> to access all features.</p>
            </div>
        }

        <!-- Additional UI components -->
        <p>Explore the features of this application and start building your own ASP.NET Core web apps!</p>
    </div>
</div>

