@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4 text-primary">Manage Roles</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center">No roles found.</div>
}

<div class="text-center mt-4">
    <a asp-action="AdminDashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>
