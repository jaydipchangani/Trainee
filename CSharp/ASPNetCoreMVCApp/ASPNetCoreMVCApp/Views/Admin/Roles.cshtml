@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Roles</h2>

@if (Model != null && Model.Count > 0)
{
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No roles found.</p>
}

<p>
    <a asp-action="AdminDashboard">Back to Dashboard</a>
</p>
