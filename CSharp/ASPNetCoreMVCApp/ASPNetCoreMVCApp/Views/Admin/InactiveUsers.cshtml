@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Inactive Users</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="ReactivateUser" asp-route-id="@user.Id" class="btn btn-success btn-sm">Reactivate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
