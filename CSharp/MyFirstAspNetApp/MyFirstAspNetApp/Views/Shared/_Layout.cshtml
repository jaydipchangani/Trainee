<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - My Website</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        .header { background: #222; color: white; padding: 10px; }
        .footer { background: #444; color: white; padding: 10px; text-align: center; }
    </style>
</head>
<body>
    <div class="header">
        <h1>My Website</h1>
        @Html.Partial("_NavBar")
    </div>

    <div>
        @RenderBody() <!-- This will be replaced by the actual content -->
    </div>

    <div class="footer">
        <p>© 2025 My Website</p>
    </div>
</body>
</html>
