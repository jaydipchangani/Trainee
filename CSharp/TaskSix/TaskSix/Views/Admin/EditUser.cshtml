@model TaskSix.Models.User

<h2>Edit User</h2>
<form method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <label>Username:</label>
    <input type="text" name="username" value="@Model.FullName" required />
    <br />
    <label>Email:</label>
    <input type="email" name="email" value="@Model.Email" required />
    <br />
    <label>Role:</label>
    <select name="role">
        <option value="User" selected="@(Model.RoleName == "User")">User</option>
        <option value="Admin" selected="@(Model.RoleName == "Admin")">Admin</option>
    </select>
    <br />
    <label>Active:</label>
    <input type="checkbox" name="isActive" value="true" @(Model.IsActive ? "checked" : "") />
    <br />
    <button type="submit">Update</button>
</form>
